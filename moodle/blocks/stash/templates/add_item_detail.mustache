{{!
    Trade item edit detail.
}}

<tr class="block-stash-item" data-id="{{itemid}}" style="width: inherit;">
    <td style="width: 70%;">{{>block_stash/item_xsmall}} {{name}}</td>
    <td style="width: 20%;">
        <input class="block-stash-quantity form-control" data-itemid={{itemid}} data-select-type={{selecttype}} type="number" value="{{quantity}}" min="1" max="{{quantity}}" />
    </td>
    <td style="width: 10%;">
        <span class="block-stash-delete-item" data-id="{{itemid}}"><a title="" href="#">{{#pix}}t/delete, core, {{#str}}deleteitem, block_stash, {{name}}{{/str}}{{/pix}}</a></span>
    </td>
</tr>
