{{!
    Individual cards for leader boards

    block_stash/local/leaderboard_settings/leaderboard_cards
}}
<div class="card mb-1">
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        <div class="ml-3">
            <div class="row custom-control custom-switch">
                <input type="checkbox" class="block_stash-leaderboard custom-control-input"
                    id="cS-leaderboard-{{id}}" data-courseid="{{courseid}}" data-location="{{location}}"
                    {{#active}}checked="true"{{/active}}
                >
                <label class="custom-control-label" for="cS-leaderboard-{{id}}">Enable</label>
            </div>
            {{{optionshtml}}}
            <input type="hidden" name="leaderboard-options-{{id}}" data-options="">
            <div class="row">
                <label class="form-label">Results limit</label>
                <div class="col-sm-1">
                    <input type="number" class="block_stash_change_element block_stash-leaderboard-limit form-control" min="1" value="{{rowlimit}}"
                        {{^active}}disabled{{/active}}
                    />
                </div>
            </div>
        </div>
    </div>
</div>
