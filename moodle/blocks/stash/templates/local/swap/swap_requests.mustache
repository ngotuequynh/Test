{{!
    @template block_stash/local/swap/swap_requests

    Swap requests.
}}
{{#haverequests}}
<h3>{{#str}}requestsforme, block_stash{{/str}}</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">{{#str}}from, block_stash{{/str}}</th>
            <th scope="col">{{#str}}received, block_stash{{/str}}</th>
            <th></th>
            <th scope="col">{{#str}}details, block_stash{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#requests}}
        <tr>
            <td>{{firstname}} {{lastname}}</td>
            <td>{{#userdate}}{{timecreated}}, {{#str}} strftimedatetime, langconfig {{/str}}{{/userdate}}</td>
            {{#status}}
            <td></td>
            {{/status}}
            {{^status}}
            <td>{{#str}}new, block_stash{{/str}}</td>
            {{/status}}
            <td><a href="swapdetail.php?courseid={{courseid}}&id={{id}}">{{#str}}view, block_stash{{/str}}</a></td>
        </tr>
        {{/requests}}
    </tbody>
</table>
{{/haverequests}}
{{#haveoffers}}
<h3>{{#str}}myrequests, block_stash{{/str}}</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">{{#str}}to, block_stash{{/str}}</th>
            <th scope="col">{{#str}}sent, block_stash{{/str}}</th>
            <th></th>
            <th scope="col">{{#str}}details, block_stash{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#offers}}
        <tr>
            <td>{{first}} {{last}}</td>
            <td>{{#userdate}}{{timecreated}}, {{#str}} strftimedatetime, langconfig {{/str}}{{/userdate}}</td>
            {{#status}}
            <td>{{status}}</td>
            {{/status}}
            {{^status}}
            <td></td>
            {{/status}}
            <td>
                <a href="swapofferdetail.php?courseid={{courseid}}&id={{id}}">{{#str}}view, block_stash{{/str}}</a>
                {{#delete}}
                {{> core/action_link}}
                {{/delete}}
            </td>
        </tr>
        {{/offers}}
    </tbody>
</table>
{{/haveoffers}}
{{#zero}}
<div class="zero-state mx-auto w-50 text-center my-6">
    <h3>{{#str}}offers:zero, block_stash{{/str}}</h3>
    <p>{{#str}}offersdetail:zero, block_stash{{/str}}</p>
</div>
{{/zero}}
