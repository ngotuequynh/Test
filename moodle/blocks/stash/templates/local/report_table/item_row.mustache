{{!
    User item row.

    Shows a row in the user item managament page.
}}
<tr>
    {{#item}}
        <td scope="col">
            {{>block_stash/user_item}} {{item.name}}
        </td>
        <td>
            <input type="number" name="quantity" value="{{useritem.quantity}}" min="1" size="5"></input>
            <input type="hidden" name="courseid" value="{{courseid}}" />
            <input type="hidden" name="userid" value="{{useritem.userid}}" />
            <input type="hidden" name="itemid" value="{{item.id}}" />
            <input type="hidden" name="sesskey" value="{{sesskey}}" />
        </td>
        <td scope="col">
            <button class="btn btn-secondary block-stash-save-button">{{#pix}}e/save, core, {{#str}}savequantity, block_stash, {{item.name}} {{/str}}{{/pix}}</button>
            <button class="btn btn-secondary block-stash-delete-button">{{#pix}}t/delete, core, {{#str}}deleteuseritem, block_stash, {{item.name}} {{/str}}{{/pix}}</button>
        </td>
    {{/item}}
</tr>
